@using Isen.DotNet.Library.Models.Implementation
@{
    ViewData["Title"] = "Detail";
}
@model City

<div class="row">
    <div class="col-md-12">
        <h1>City <small>/city/Detail</small></h1>
        <p>Ceci est le contenu de la vue City, action Detail</p>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <form class="form-horizontal" asp-action="Detail">
            <input type="hidden" value="@Model?.Id" asp-for="Id"/>
            <div>
                <label for="Name" class="control-lable">Nom de la ville :</label>
                <input type="text" class="form-control" id="name" placeholder="Nom de la ville" value="@Model?.Name" asp-for="Name"/>
            </div>
            <input type="submit" class="btn btn-primary" value="Valider" />
            <a class="btn btn-default" asp-controller="City" asp-action="Index">Annuler</a>
        </form>
    </div>
</div>